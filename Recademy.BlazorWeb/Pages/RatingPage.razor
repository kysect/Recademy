@page "/rating"
@using Recademy.BlazorWeb.Services.Abstraction

@inject IUserService UserService

<h3>Reviewers rating</h3>

<MatTable Items="@_result" class="mat-elevation-z5">
    <MatTableHeader>
        <th>Username</th>
        <th>Points</th>
    </MatTableHeader>
    <MatTableRow>
        <td>@context.Key</td>
        <td>@context.Value</td>
    </MatTableRow>
</MatTable>
 
@code
{
    Dictionary<string, int> _result;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Dictionary<string, int> rate = UserService.GetRanking();
        _result = rate;
    }
 
}